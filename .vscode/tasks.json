// https://code.visualstudio.com/docs/editor/tasks
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${relativeFileDirname}.exe",
                "-g",
                "-m64",
                "-Wall",
                "${workspaceRoot}\\OpenGL lib\\libglfw3dll.a",
                "${workspaceRoot}\\OpenGL lib\\libopengl32.a",
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        }
    ]
}